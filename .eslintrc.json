{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier",
    "jsx-a11y"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "semi": false,
        "tabWidth": 2,
        "singleQuote": true,
        "printWidth": 80,
        "endOfLine": "auto",
        "arrowParens": "always",
        "plugins": [
          "prettier-plugin-tailwindcss"
        ]
      },
      {
        "usePrettierrc": false
      }
    ],
    "react/react-in-jsx-scope": "off"
  }
}